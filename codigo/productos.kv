<MyTile@SmartTileWithStar>
    size_hint_y: None
<MyCard@MDCard>
    height: (Window.height/3)-8
    width: (Window.width/3)-8

Screen:
    NavigationLayout:
        ScreenManager:
            Screen:
                BoxLayout:
                    id:box
                    orientation: "vertical"
                    MDToolbar:
                        title: "Productos"
                        left_action_items:[['menu',lambda x: nav_drawer.toggle_nav_drawer()]]
                        elevation:5
                
                    ScrollView:
                        MDGridLayout:
                            cols: 3
                            adaptive_height: True
                            padding: dp(8), dp(8)
                            spacing: dp(8)
                            MyCard:
                                orientation: "vertical"
                                padding: "10dp"
                                size_hint: None, None
                                size: "280dp", "180dp"
                                pos_hint: {"center_x": .5, "center_y": .5}
                                MyTile:
                                    source: "Imagenes/Productos/plato_6.jpg"
                                    width:self.height
                                
                                MDLabel:
                                    text: "Plato 6"
                                    theme_text_color: "Secondary"
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    pos_hint: {"center_x": .5, "center_y": .5}
                                    hading: 'center'
                                MDGridLayout:
                                    cols: 4
                                    adaptive_height: True
                                    MDIconButton:
                                        icon:'plus'
                                        pos_hint: {"center_x": .5, "center_y": .5}
                                    
                                    MDLabel:
                                        text: "0"
                                        theme_text_color: "Secondary"
                                        hading: 'center'
                                    MDIconButton:
                                        icon:'minus'
                                        pos_hint: {"center_x": .5, "center_y": .5}
                            MyCard:
                                orientation: "vertical"
                                padding: "10dp"
                                size_hint: .5, None
                                size: "280dp", "180dp"
                                pos_hint: {"center_x": .5, "center_y": .5}
                                MDSeparator:
                                    height: "1dp"
                            MyCard:
                                orientation: "vertical"
                                padding: "10dp"
                                size_hint: .5, None
                                size: "280dp", "180dp"
                                pos_hint: {"center_x": .5, "center_y": .5}
                                MDSeparator:
                                    height: "1dp"
                            MyCard:
                                orientation: "vertical"
                                padding: "10dp"
                                size_hint: .5, None
                                size: "280dp", "180dp"
                                pos_hint: {"center_x": .5, "center_y": .5}
                                MDSeparator:
                                    height: "1dp"
                            MyCard:
                                orientation: "vertical"
                                padding: "10dp"
                                size_hint: .5, None
                                size: "280dp", "180dp"
                                pos_hint: {"center_x": .5, "center_y": .5}
                                MDSeparator:
                                    height: "1dp"
                            MyCard:
                                orientation: "vertical"
                                padding: "10dp"
                                size_hint: .5, None
                                size: "280dp", "180dp"
                                pos_hint: {"center_x": .5, "center_y": .5}
                                MDSeparator:
                                    height: "1dp"

                            
        MDNavigationDrawer:
            id: nav_drawer
            BoxLayout:
                orientation:'vertical'
                spacing: '6dp'
                padding: '6dp'
                Image:
                    source: 'Imagenes/2.jpg'
                MDLabel:
                    text: 'Mi Tienda'
                    font_style: 'Subtitle1'
                    size_hint_y: None
                    height: self.texture_size[1]
                ScrollView:
                    MDList:
                        OneLineIconListItem:
                            text: 'Distribuidores'
                            IconLeftWidget:
                                icon: 'store'
                        OneLineIconListItem:
                            text: 'Mis Pedidos'
                            IconLeftWidget:
                                icon: 'cart'