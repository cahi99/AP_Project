
#: include 'dist.kv'
#: include force 'mipedido.kv'
<Screen2>
    name: 'Screen2'
    NavigationLayout:
        ScreenManager:
            Screen:
                BoxLayout:
                    orientation: "vertical"
                    MDToolbar:
                        title: "Productos"
                        left_action_items:[['menu',lambda x: nav_drawer.toggle_nav_drawer()]]
                        right_action_items:[['cart',lambda x: Screen3]]
                        elevation:5
                    ScrollView:
                        MDGridLayout:
                            cols: 3
                            id:box
                            adaptive_height: True
                            padding: dp(8), dp(8)
                            spacing: dp(8)

                            
        MDNavigationDrawer:
            id: nav_drawer
            BoxLayout:
                orientation:'vertical'
                spacing: '6dp'
                padding: '6dp'
                Image:
                    source: 'Imagenes/2.jpg'
                MDLabel:
                    text: 'Mi Tienda'
                    font_style: 'Subtitle1'
                    size_hint_y: None
                    height: self.texture_size[1]
                ScrollView:
                    MDList:
                        OneLineIconListItem:
                            text: 'Distribuidores'
                            on_press: app.root.current='Screen1'
                            IconLeftWidget:
                                icon: 'store'
                        OneLineIconListItem:
                            text: 'Mis Pedidos'
                            IconLeftWidget:
                                icon: 'cart'


<MyCard>:
    orientation: "vertical"
    padding: "10dp"
    spading: "10dp"
    size_hint: .5, None
    size: "260dp", "180dp"
    pos_hint: {"center_x": .5, "center_y": .5}
    Image:
        id: id_image
        size_hint_y: None
    MDGridLayout:
        cols:2
        adaptive_height: True
        MDLabel:
            id:n_producto
            theme_text_color: "Secondary"
            size_hint_y: None
            height: self.texture_size[1]
            pos_hint: {"center_x": .5, "center_y": .5}
            hading: 'center'
        RightContent:
            MDIconButton:
                id:plus
                pos_hint: {"center_x": .5, "center_y": .5}
            
            MDLabel:
                id:cero
                theme_text_color: "Secondary"
                hading: 'center'
            MDIconButton:
                id:minus
                pos_hint: {"center_x": .5, "center_y": .5}
