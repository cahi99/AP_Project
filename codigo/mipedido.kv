#:import rgba kivy.utils.get_color_from_hex
#: include 'dist.kv'
<Screen3>
    name: 'Screen3'
    NavigationLayout:
        ScreenManager:
            Screen:
                BoxLayout:
                    id:box
                    orientation: "vertical"
                    MDToolbar:
                        title: "Revisar Pedido"
                        left_action_items:[['menu',lambda x: nav_drawer.toggle_nav_drawer()]]
                        elevation:5
                
                    ScrollView:
                        MDGridLayout:
                            cols:1
                            padding: '6dp'
                            MDCard:
                                height: Window.height - 250
                                width: Window.width*0.75
                                orientation: "vertical"
                                padding: "10dp"
                                size_hint: .5, None
                                pos_hint: {"top": 1, "center_y": .5}
                                ScrollView:
                                    MDList:
                                        id:scrll_v
                                    
                            RelativeLayout:
                                MDGridLayout:
                                    cols:2
                                    padding:'10dp'
                                    spacing:'10dp'
                                    pos_hint: {"center_x": .5, "center_y": .5}
                                    MDCard:
                                        padding:'10dp'
                                        MDGridLayout:
                                            cols:1
                                            id:conjuntos
                                            MDLabel:
                                                text:"Resumen"
                                                halign:'justify'
                                                font_style:'H6'
                                    MDRectangleFlatButton:
                                        padding:'10dp'
                                        text: 'Enviar'
                                        md_bg_color: rgba("#00587a")
                                        text_color: rgba("#ffffff")
        MDNavigationDrawer:
            id: nav_drawer
            BoxLayout:
                orientation:'vertical'
                spacing: '6dp'
                padding: '6dp'
                Image:
                    source: 'Imagenes/2.jpg'
                MDLabel:
                    text: 'Mi Tienda'
                    font_style: 'Subtitle1'
                    size_hint_y: None
                    height: self.texture_size[1]
                ScrollView:
                    MDList:
                        OneLineIconListItem:
                            text: 'Distribuidores'
                            on_press: app.root.current='Screen1'
                            IconLeftWidget:
                                icon: 'store'
                        OneLineIconListItem:
                            text: 'Mis Pedidos'
                            IconLeftWidget:
                                icon: 'cart'


<Mylist>

<Subtotales>:
    cols:2
    MDLabel:
        id:val
        halign:'justify'
        font_style:'Subtitle1'
    MDLabel:
        id:lbl
        halign:'justify'
        font_style:'Subtitle1'
    
