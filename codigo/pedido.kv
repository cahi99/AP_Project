#:import rgba kivy.utils.get_color_from_hex
<Screen5@Screen>
    name: 'Screen5'
    NavigationLayout:
        ScreenManager:
            Screen:
                BoxLayout:
                    id:box
                    orientation: "vertical"
                    MDToolbar:
                        title: "Revisar Pedido"
                        left_action_items:[['menu',lambda x: nav_drawer.toggle_nav_drawer()]]
                        elevation:5
                        MDIconButton:
                            id:carrito
                            icon: 'undo'
                            theme_text_color: 'Custom'
                            elevation: 0
                            md_bg_color: app.theme_cls.primary_color
                
                    ScrollView:
                        MDGridLayout:
                            cols:1
                            padding: '6dp'
                            MDCard:
                                height: Window.height
                                width: Window.width*0.75
                                orientation: "vertical"
                                padding: "10dp"
                                size_hint: .5, None
                                pos_hint: {"top": 1, "center_y": .5}
                                ScrollView:
                                    MDList:
                                        id:scrll_v

        MDNavigationDrawer:
            id: nav_drawer
            BoxLayout:
                orientation:'vertical'
                spacing: '6dp'
                padding: '6dp'
                Image:
                    source: 'Imagenes/2.jpg'
                MDLabel:
                    text: 'Mi Tienda'
                    font_style: 'Subtitle1'
                    size_hint_y: None
                    height: self.texture_size[1]
                ScrollView:
                    MDList:
                        OneLineIconListItem:
                            text: 'Distribuidores'
                            on_press: app.root.current='Screen1'
                            IconLeftWidget:
                                icon: 'store'
                        OneLineIconListItem:
                            text: 'Salir'
                            IconLeftWidget:
                                icon: 'close'

